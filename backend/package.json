{
    "name": "agentic-backend",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "dev:api": "tsx watch src/api-main.ts",
        "dev:gateway": "tsx watch src/gateway-main.ts",
        "build:monolith": "esbuild src/index.ts --bundle --platform=node --format=esm --outdir=dist --packages=external",
        "build:api": "esbuild src/api-main.ts --bundle --platform=node --format=esm --outdir=dist/api --packages=external",
        "build:gateway": "esbuild src/gateway-main.ts --bundle --platform=node --format=esm --outdir=dist/gateway --packages=external",
        "build": "npm run build:api && npm run build:gateway",
        "start": "node dist/index.js",
        "start:api": "node dist/api/api-main.js",
        "start:gateway": "node dist/gateway/gateway-main.js",
        "test": "vitest run"
    },
    "dependencies": {
        "@elysiajs/cors": "^1.4.0",
        "@elysiajs/jwt": "^1.4.0",
        "@elysiajs/node": "^1.4.5",
        "@prisma/client": "^5.12.0",
        "@whiskeysockets/baileys": "^7.0.0-rc.9",
        "argon2": "^0.41.1",
        "elysia": "latest",
        "ioredis": "latest",
        "mime-types": "^2.1.35",
        "pdf-parse": "^1.1.1",
        "pino": "^10.1.0",
        "qrcode": "^1.5.4"
    },
    "devDependencies": {
        "@types/mime-types": "^2.1.4",
        "@types/node": "^22.0.0",
        "@types/qrcode": "^1.5.6",
        "esbuild": "^0.24.0",
        "prisma": "^5.12.0",
        "tsx": "^4.19.0",
        "vitest": "^2.1.0"
    }
}
