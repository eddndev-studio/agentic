[Unit]
Description=Agentic API Service (Node.js)
After=network.target postgresql.service redis.service
Wants=agentic-core.service

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/var/www/agentic/backend
EnvironmentFile=/var/www/agentic/backend/.env
Environment=PORT=8080
ExecStart=/usr/bin/node dist/api/api-main.js
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal
SyslogIdentifier=agentic-api

# Security hardening
NoNewPrivileges=true
ProtectSystem=strict
ReadWritePaths=/var/www/agentic/backend

[Install]
WantedBy=multi-user.target
