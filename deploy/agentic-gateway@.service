[Unit]
Description=Agentic Gateway %i (Node.js)
After=network.target postgresql.service redis.service
Wants=agentic-core.service

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/var/www/agentic/backend
EnvironmentFile=/var/www/agentic/backend/.env
EnvironmentFile=/var/www/agentic/deploy/.env.gateway-%i
ExecStart=/usr/bin/node dist/gateway/gateway-main.js
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal
SyslogIdentifier=agentic-gateway-%i

# Security hardening
NoNewPrivileges=true
ProtectSystem=strict
ReadWritePaths=/var/www/agentic/backend

[Install]
WantedBy=multi-user.target
